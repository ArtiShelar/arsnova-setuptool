		"by_keyword":{
			"map":"function(doc) { if (doc.type == 'motd') { emit(doc.motdkey, doc); }}"
		},
		"list_by_username":{
			"map":"function(doc) { if (doc.type == 'motdlist') { emit(doc.username, doc); }}"
